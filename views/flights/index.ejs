<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <a href="/flights/new">Add Flights</a>
    <a href="/flights">All Flights</a>
    <a href="/destinations/new">Add Destinations</a>
    <title>Mongoose Flights</title>
</head>
<body>
    <h1>Flights List</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No.</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight){ %>
              <tr>
                <td><%= flight.airline %> </td>
                <td><%= flight.airport %> </td>
                <td><%= flight.flightNo %> </td>
                <td><%= flight.departs %> </td>
                <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
                <td>
                    <form action="/flights/<%= flight._id %>/edit" method="GET">
                        <button>EDIT</button>
                    </form>
                </td>
                <td>
                    <form action="flights/<%= flight._id %>?_method=DELETE" method="POST"><button>DELETE</button></form>
                </td>
              </tr>
            <% }) %>  
        </tbody>
    </table>
</body>
</html>